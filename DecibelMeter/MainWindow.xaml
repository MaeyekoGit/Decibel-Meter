<Window x:Class="DecibelMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decibel Meter"
        Icon="logo.ico"
        Height="520"
        Width="460"
        Background="#222"
        Foreground="#EEE"
        FontFamily="Segoe UI"
        FontSize="13"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Thickness x:Key="FieldMargin">0,4,0,8</Thickness>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Background" Value="#333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Foreground" Value="#EEE"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Foreground" Value="#EEE"/>
        </Style>

        <SolidColorBrush x:Key="BarBackgroundBrush" Color="#444"/>
        <SolidColorBrush x:Key="BarFillBrush" Color="#2FAF41"/>
        <SolidColorBrush x:Key="BarOverThresholdBrush" Color="#C84728"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 0 spacer -->
            <RowDefinition Height="Auto"/> <!-- 1 Device -->
            <RowDefinition Height="Auto"/> <!-- 2 Threshold + Monitor -->
            <RowDefinition Height="Auto"/> <!-- 3 Overlay -->
            <RowDefinition Height="Auto"/> <!-- 4 Warning Sound -->
            <RowDefinition Height="*"/>    <!-- 5 Output -->
            <RowDefinition Height="Auto"/> <!-- 6 Bar -->
            <RowDefinition Height="Auto"/> <!-- 7 Buttons -->
        </Grid.RowDefinitions>

        <!-- Device -->
        <TextBlock Grid.Row="1" Text="Input Device:" Style="{StaticResource LabelStyle}"/>
        <ComboBox Grid.Row="1"
                  x:Name="DeviceComboBox"
                  HorizontalAlignment="Stretch"
                  Margin="0,28,0,8"
                  ToolTip="Select the capture/input device"/>

        <!-- Threshold + Monitor -->
        <Grid Grid.Row="2" Margin="0,4,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                <TextBlock Text="Threshold (%) :" Style="{StaticResource LabelStyle}" HorizontalAlignment="Left"/>
                <TextBox x:Name="ThresholdBox"
                         Width="140"
                         HorizontalAlignment="Left"
                         ToolTip="Trigger warning when average level exceeds this percentage (0-100)"/>
            </StackPanel>
            <StackPanel Grid.Column="2" HorizontalAlignment="Left">
                <TextBlock Text="Monitor:" Style="{StaticResource LabelStyle}" HorizontalAlignment="Left"/>
                <ComboBox x:Name="MonitorComboBox"
                          Width="140"
                          HorizontalAlignment="Left"
                          ToolTip="Screen where the overlay is shown"/>
            </StackPanel>
        </Grid>

        <!-- Overlay block -->
        <Border Grid.Row="3"
                Margin="0,8,0,0"
                BorderBrush="#BBB"
                BorderThickness="0,1,0,0"
                Padding="0,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto" MinWidth="212"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button x:Name="SelectOverlayButton"
                            Content="Select Overlay Image"
                            Click="SelectOverlayImage_Click"
                            Width="170"
                            HorizontalAlignment="Left"/>
                    <TextBlock x:Name="SelectedOverlayText"
                               Margin="0,4,0,0"
                               Foreground="#BBB"
                               Text="No file selected"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="Currently selected overlay image file"/>
                </StackPanel>
                <CheckBox Grid.Column="1"
                          x:Name="ActivateOverlayCheckBox"
                          Content="Activate Overlay"
                          Margin="0,6,0,0"
                          VerticalAlignment="Top"
                          Foreground="#EEE"
                          Checked="ActivateOverlayCheckBox_Changed"
                          Unchecked="ActivateOverlayCheckBox_Changed"/>
            </Grid>
        </Border>

        <!-- Warning Sound block -->
        <Border Grid.Row="4"
                Margin="0,8,0,0"
                BorderBrush="#BBB"
                BorderThickness="0,0,0,1"
                Padding="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="159"/>
                    <ColumnDefinition Width="53"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button x:Name="SelectSoundButton"
                            Content="Select Warning Sound"
                            Click="SelectSound_Click"
                            Width="170"
                            HorizontalAlignment="Left"/>
                    <TextBlock x:Name="SelectedSoundText"
                               Margin="0,4,0,4"
                               Foreground="#BBB"
                               Text="No file selected"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="Currently selected warning sound file"/>
                    <TextBlock x:Name="VolumeLabel"
                               Text="Warning Sound Volume (0-200):"
                               Margin="0,4,0,2"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="VolumeBox"
                             Width="140"
                             Text="100"
                             HorizontalAlignment="Left"
                             ToolTip="Playback volume multiplier for the warning sound"/>
                </StackPanel>
                <CheckBox Grid.Column="1"
                          x:Name="ActivateSoundCheckBox"
                          Content="Activate Sound"
                          Margin="0,6,0,0"
                          VerticalAlignment="Top"
                          Height="16"
                          Foreground="#EEE"
                          Grid.ColumnSpan="2"
                          Checked="ActivateSoundCheckBox_Changed"
                          Unchecked="ActivateSoundCheckBox_Changed"/>
            </Grid>
        </Border>

        <!-- Level output -->
        <TextBlock Grid.Row="5"
                   x:Name="OutputText"
                   FontSize="18"
                   FontWeight="Bold"
                   Text="Level: 0%"
                   Margin="0,16,0,8"
                   HorizontalAlignment="Left"/>

        <!-- Visualization bar -->
        <Grid Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="0%" Foreground="#AAA" FontSize="12" FontWeight="Bold"
                           VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,2"/>
                <TextBlock Text="100%" Foreground="#AAA" FontSize="12" FontWeight="Bold"
                           Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,2"/>
                <TextBlock x:Name="ThresholdValueLabel"
                           Text="50%"
                           Foreground="Orange"
                           Background="#222"
                           FontSize="12"
                           FontWeight="Bold"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,2"
                           RenderTransformOrigin="0.5,1"
                           Visibility="Collapsed">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="ThresholdValueLabelTransform"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Grid>
            <Border Grid.Row="1"
                    Height="38"
                    CornerRadius="6"
                    Background="{StaticResource BarBackgroundBrush}"
                    Padding="3"
                    BorderBrush="#555"
                    BorderThickness="1"
                    VerticalAlignment="Bottom">
                <Grid>
                    <Rectangle x:Name="BarBackground"
                               RadiusX="4"
                               RadiusY="4"
                               Fill="Transparent"/>
                    <Rectangle x:Name="BarLevel"
                               Fill="{StaticResource BarFillBrush}"
                               RadiusX="4"
                               RadiusY="4"
                               Width="0"
                               HorizontalAlignment="Left"/>
                    <Line x:Name="ThresholdLine"
                          Stroke="Orange"
                          StrokeThickness="3"
                          Y1="0"
                          Y2="38"
                          X1="0"
                          X2="0"
                          SnapsToDevicePixels="True"
                          Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,0">
            <Button Content="Start Monitoring"
                    Width="150"
                    Click="Start_Click"/>
            <Button Content="Stop Monitoring"
                    Width="150"
                    Click="Stop_Click"
                    Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
